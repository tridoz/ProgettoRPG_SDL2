{
  "name": "C++ Project with SDL2",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {},
    "ghcr.io/devcontainers/features/gcc:1": {},
    "ghcr.io/devcontainers/features/cmake:1": {}
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libsdl2-dev libsdl2_image-dev libsdl2_ttf-dev libsdl2_mixer-dev",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "remoteUser": "vscode"
}
